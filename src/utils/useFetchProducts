import { useState, useEffect } from 'react'

const useFetchProducts = (url) => {
  // Get Products
  const [products, setProducts] = useState(null)

  useEffect(() => {
    fetch(url)
      .then(response => response.json())
      .then(data => setProducts(data))
  }, [url])

  return { products }
}

export default useFetchProducts
